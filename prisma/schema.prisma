generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String            @id @default(cuid())
  name             String?
  email            String?           @unique
  role             UserRole          @default(USER)
  emailVerified    DateTime?
  image            String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  accounts         Account[]
  ownedGroups      Group[]           @relation("GroupOwner")
  sentGroupInvites GroupInvite[]     @relation("GroupInviteCreator")
  groupMemberships GroupMembership[] @relation("GroupMembershipUser")
  sessions         Session[]
  watchEntries     WatchEntry[]
  entryReactions   WatchEntryReaction[]
  heroDismissedAt  DateTime?
  notificationPrefs GroupNotificationPreference[]
  allowlistEntries GroupAllowlist[]   @relation("AllowlistCreator")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WatchEntry {
  id        String            @id @default(cuid())
  userId    String
  imdbId    String
  title     String
  year      String?
  posterUrl String?
  type      String
  review    String?
  liked     Boolean           @default(true)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  groupId   String?
  group     Group?            @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  reactions WatchEntryReaction[]

  @@unique([userId, imdbId, groupId])
  @@unique([groupId, imdbId])
}

model Group {
  id           String            @id @default(cuid())
  name         String
  slug         String            @unique
  shareCode    String            @unique
  ownerId      String
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  owner        User              @relation("GroupOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  invites      GroupInvite[]
  memberships  GroupMembership[]
  watchEntries WatchEntry[]
  notificationPrefs GroupNotificationPreference[]
}

model GroupMembership {
  id        String                @id @default(cuid())
  groupId   String
  userId    String
  role      GroupRole             @default(EDITOR)
  status    GroupMembershipStatus @default(ACTIVE)
  createdAt DateTime              @default(now())
  group     Group                 @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user      User                  @relation("GroupMembershipUser", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}

model GroupNotificationPreference {
  id         String   @id @default(cuid())
  groupId    String
  userId     String
  instant    Boolean  @default(false)
  weekly     Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  group      Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}

model GroupInvite {
  id          String    @id @default(cuid())
  groupId     String
  email       String
  token       String    @unique
  expiresAt   DateTime?
  createdById String
  acceptedAt  DateTime?
  inviteRole  GroupRole @default(EDITOR)
  createdAt   DateTime  @default(now())
  createdBy   User      @relation("GroupInviteCreator", fields: [createdById], references: [id], onDelete: Cascade)
  group       Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model GroupAllowlist {
  id          String   @id @default(cuid())
  email       String   @unique
  createdAt   DateTime @default(now())
  createdById String?
  createdBy   User?    @relation("AllowlistCreator", fields: [createdById], references: [id], onDelete: SetNull)
}

model WatchEntryReaction {
  id        String            @id @default(cuid())
  entryId   String
  userId    String
  reaction  EntryReactionType
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  entry     WatchEntry        @relation(fields: [entryId], references: [id], onDelete: Cascade)
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([entryId, userId])
}

enum EntryReactionType {
  LIKE
  DISLIKE
}

enum UserRole {
  USER
  ADMIN
}

enum GroupRole {
  OWNER
  EDITOR
  VIEWER
}

enum GroupMembershipStatus {
  PENDING
  ACTIVE
}
